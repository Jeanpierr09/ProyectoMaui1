                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                />
        </StackLayout>

        <StackLayout>
            <Label
                Text="Acá te mostramos las camionetas que puedes escoger"
                FontSize="Large"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0,30,0,0"
            />
        </StackLayout>

        <StackLayout>
            <Label
                Text="4Runner"
                FontSize="Large"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="-1000,95,0,0"
            />
        </StackLayout>

        <StackLayout>
            <Button
                Text="Agregar este Auto a la lista"
                Margin="-1000,145,0,0"
